---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import TranslationScript from '../components/TranslationScript.astro';
import { AuroraBackground } from '../components/ui/AuroraBackground.tsx';
import { Spotlight } from '../components/ui/Spotlight.tsx';
import { TextHoverEffect } from '../components/ui/TextHoverEffect.tsx';
import { TracingBeam } from '../components/ui/TracingBeam.tsx';
import { GlowingEffect } from '@/components/ui/GlowingEffect.tsx';
import { BackgroundGradient } from '../components/ui/BackgroundGradient.tsx';
import { HoverBorderGradient } from '@/components/ui/HoverBorderGradient';
---

<Layout title="Carta - Amanto Restaurante" description="Descubre nuestra exquisita carta con platos de autor y selección de vinos">
  <Navigation />
  
  <AuroraBackground>
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center relative pt-20">
      <Spotlight className="-top-40 left-0 md:left-60 md:-top-20" fill="white" />
      
      <div class="opacity-50 absolute inset-0 z-10 [mask-image:linear-gradient(to_top,black_10%,transparent_90%)]">
        <img 
          src="/images/mesa.jpg" 
          alt="Nosotros"
          class="w-full h-full object-cover"
        />
      </div>

      <div class="text-center max-w-4xl mx-auto px-4 relative z-20">
        <div class="space-y-6">
          <div class="mb-8">
            <TextHoverEffect 
              text="Carta" 
              duration={0.5}
              client:visible
            />
          </div>
          
          <p class="text-xl text-foreground/70 max-w-3xl mx-auto" data-translate="menu.description">
            Una experiencia culinaria que cuenta historias de amor, tradición y pasión
          </p>
        </div>
      </div>
    </section>

    <!-- Menu Section with TracingBeam -->
    <section class="py-20 px-4" id="menu-section">
      <div class="container mx-auto max-w-7xl">
        <div class="lg:grid lg:grid-cols-[250px_1fr] lg:gap-12">
          
          <!-- Left Column - Categories Navigation (Fixed) -->
          <div class="lg:relative">
            <aside class="categories-sidebar mb-8 lg:mb-0">
              <h3 class="text-sm font-semibold text-foreground/50 uppercase tracking-wider mb-6">Categorías</h3>
              <nav class="flex flex-row lg:flex-col gap-2 overflow-x-auto lg:overflow-visible pb-4 lg:pb-0 scrollbar-hide">
                <a href="#aperitivos" class="menu-category-link whitespace-nowrap" data-category="aperitivos">
                  <span data-translate="menu.appetizers">Aperitivos</span>
                </a>
                <a href="#sopas" class="menu-category-link whitespace-nowrap" data-category="sopas">
                  <span data-translate="menu.soups">Sopas</span>
                </a>
                <a href="#fondos" class="menu-category-link whitespace-nowrap" data-category="fondos">
                  <span data-translate="menu.mainCourses">Fondos</span>
                </a>
                <a href="#postres" class="menu-category-link whitespace-nowrap" data-category="postres">
                  <span data-translate="menu.desserts">Postres</span>
                </a>
                <a href="#compartir" class="menu-category-link whitespace-nowrap" data-category="compartir">
                  <span data-translate="menu.toShare">Para Compartir</span>
                </a>
                <a href="#cocteles" class="menu-category-link whitespace-nowrap" data-category="cocteles">
                  <span data-translate="menu.cocktails">Cócteles</span>
                </a>
                <a href="#vinos" class="menu-category-link whitespace-nowrap" data-category="vinos">
                  <span data-translate="menu.wines">Vinos</span>
                </a>
                <a href="#bebidas" class="menu-category-link whitespace-nowrap" data-category="bebidas">
                  <span data-translate="menu.refreshing">Refrescantes</span>
                </a>
              </nav>
            </aside>
          </div>

          <!-- Right Column - Menu Content with Tracing Beam -->
          <div>
            <TracingBeam client:load>
              <div class="space-y-20">

                <!-- Aperitivos -->
                <div id="aperitivos" class="scroll-mt-24">
                  <div class="relative h-64 rounded-2xl overflow-hidden mb-8">
                    <img 
                      src="/images/plato1.jpg" 
                      alt="Aperitivos Amanto"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end">
                      <h2 class="text-3xl md:text-4xl font-bold text-white p-8" data-translate="menu.appetizers">
                        Aperitivos
                      </h2>
                    </div>
                  </div>
                  <div class="grid grid-cols-1 gap-6">
                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.tiradito_alpaca">TIRADITO DE ALPACA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 40</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.tiradito_alpaca_desc">
                        Finos trozos de alpaca bañadas con leche de tigre de castañas, acompañadas de chalaquita, llullucha, trozos de camote, choclo desgranado.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.berenjena">BERENJENA EMPANIZADA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 30</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.berenjena_desc">
                        Berenjena empanizada en una capa de panko, bañadas en salsa de pesto de tomate, acompañadas con Kallampas.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.ensalada_amanto">ENSALADA AMANTO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 35</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.ensalada_amanto_desc">
                        Una mezcla de hojas del valle acompañadas de trozos de manzana, tomate cherry, palta, palmito, espárragos, flor de trucha y vinagreta de la casa.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.langostinos_andinos">LANGOSTINOS ANDINOS</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 45</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.langostinos_andinos_desc">
                        Langostinos empanizados en una fina capa de quinua acompañados de boli camotes rellenos de queso, chalaquita de quinua y una dulce mermelada de ají amarillo.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.causa_langostinos">CAUSA DE LANGOSTINOS</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 42</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.causa_langostinos_desc">
                        Langostinos en salsa golf, palta, masa de causa, huevo de codorniz, tomate cherry, todo acompañado con salsa de tumbo o maracuyá.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.tiradito_trucha">TIRADITO DE TRUCHA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 38</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.tiradito_trucha_desc">
                        Láminas de trucha en leche de tigre estilo Amanto. Acompañado de choclo, camote crocante y chulpi.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Sopas -->
                <div id="sopas" class="scroll-mt-24">
                  <div class="relative h-64 rounded-2xl overflow-hidden mb-8">
                    <img 
                      src="/images/plato2.jpg" 
                      alt="Sopas Amanto"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end">
                      <h2 class="text-3xl md:text-4xl font-bold text-white p-8" data-translate="menu.soups">
                        Sopas
                      </h2>
                    </div>
                  </div>
                  <div class="grid grid-cols-1 gap-6">
                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.crema_maiz">CREMA DE MAÍZ</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 25</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.crema_maiz_desc">
                        Receta ancestral de nuestros abuelos basada en el uso del grano del maíz acompañada de habas, olluco, queso, zanahoria, huevo.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.sopa_pollo">SOPA DE POLLO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 22</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.sopa_pollo_desc">
                        Ligero consomé de pechuga de pollo, vegetales de temporada, cabello de ángel y lascas de pollo.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.chupe_quinua">CHUPE DE QUINUA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 28</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.chupe_quinua_desc">
                        Mix de quinuas sumergidos con vegetales de temporada, haba, papa, leche y queso.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Fondos -->
                <div id="fondos" class="scroll-mt-24">
                  <div class="relative h-64 rounded-2xl overflow-hidden mb-8">
                    <img 
                      src="/images/plato3.jpg" 
                      alt="Fondos Amanto"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end">
                      <h2 class="text-3xl md:text-4xl font-bold text-white p-8" data-translate="menu.mainCourses">
                        Fondos
                      </h2>
                    </div>
                  </div>
                  <div class="grid grid-cols-1 gap-6">
                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.trucha_oriental">TRUCHA EN SALSA ORIENTAL Y CAPCHI DE HABAS</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 50</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.trucha_oriental_desc">
                        Trucha empanizada en mix de quinua y chia acompañado de vegetales orientales y un cremoso capchi de habas andinas en escama de espinaca.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.lomo_alpaca">LOMO DE ALPACA EN SALSA TRES PIMIENTAS</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 65</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.lomo_alpaca_desc">
                        Fino lomo de res sobre quinoto verde en un espejo de salsa tres pimientas acompañada de una ligera ensalada.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.enrollado_pollo">ENROLLADO DE POLLO CON FETTUCCINI</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 45</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.enrollado_pollo_desc">
                        Pollo y jamón envueltos y mezclados con queso andino, espinaca y albahaca, sobre fettuccini cubiertos por una deliciosa salsa huancaína.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.huatia_cuy">HUATIA CON CUY</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 70</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.huatia_cuy_desc">
                        Cuy al estilo amanto con un acompañamiento de papas al mortero con rocoto, sobre un espejo de glasé de sauco y ensalada criolla.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.cordero_confitado">PURÉ RÚSTICO CON CORDERO CONFITADO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 75</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.cordero_confitado_desc">
                        Tierno costillar de cordero con vegetales grillados acompañado de pastel rústico de papas andinas, todo, sobre un espejo de salsa demi-glace.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.lomo_saltado">LOMO SALTADO AMANTO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 48</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.lomo_saltado_desc">
                        Nuestro patriótico lomo de res, cebolla, tomate cherry, ají amarillo, trozos de plata bizcochito, papas y arroz.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.causa_acevichada">CAUSA ACEVICHADA AL ESTILO AMANTO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 55</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.causa_acevichada_desc">
                        Nuestro abanderado ceviche carretillero sobre dos torres de causa rellena de palta, envuelta en una doble textura (suave y crocante) empanizada con mix de quinua.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.envoltini_papa">ENVOLTINI DE PAPA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 38</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.envoltini_papa_desc">
                        Papa peruanita rellena de palta cubierta en una escama de espinaca, vegetales salteados y reducción balsámica.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.saltado_verduras">SALTADO DE VERDURAS</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 35</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.saltado_verduras_desc">
                        Una selección de frescos vegetales del Valle Sagrado acompañados de arroz y papas fritas.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.fettuccini_zeta">FETTUCCINI CON ZETA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 42</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.fettuccini_zeta_desc">
                        Tallarines fettuccini en salsa de zetas y un mix de verduras del huerto.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Postres -->
                <div id="postres" class="scroll-mt-24">
                  <div class="relative h-64 rounded-2xl overflow-hidden mb-8">
                    <img 
                      src="/images/tartaleta-sauco-airampo.jpg" 
                      alt="Postres Amanto"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end">
                      <h2 class="text-3xl md:text-4xl font-bold text-white p-8" data-translate="menu.desserts">
                        Postres
                      </h2>
                    </div>
                  </div>
                  <div class="grid grid-cols-1 gap-6">
                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.tartaleta_sauco">TARTALETA DE SAUCO Y AIRAMPO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 22</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.tartaleta_sauco_desc">
                        Bizcotela de canela rellena de frosting de ajíes peruanos, acompañado de frutos rojos del valle caramelizados con toques de sal rosada de Maras.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.bomba_chocolate">BOMBA DE CHOCOLATE</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 25</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.bomba_chocolate_desc">
                        Un globo de chocolate hecho con cacao quillabambino, relleno de mousse de lúcuma y galletas de coco.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.torta_chocolate">TORTA DE CHOCOLATE</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 24</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.torta_chocolate_desc">
                        Deliciosa torta húmeda de chocolate con glace de chocolate destellante acompañado de un afrodisíaco helado de copatazú (fruta de la selva) o helado de temporada.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.queso_helado">QUESO HELADO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 20</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.queso_helado_desc">
                        Cramble de castañas encima de manzanas laminadas y caramelizadas acompañado de un queso helado.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Para Compartir -->
                <div id="compartir" class="scroll-mt-24">
                  <div class="relative h-64 rounded-2xl overflow-hidden mb-8">
                    <img 
                      src="/images/plato4.jpg" 
                      alt="Para Compartir Amanto"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end">
                      <h2 class="text-3xl md:text-4xl font-bold text-white p-8" data-translate="menu.toShare">
                        Para Compartir
                      </h2>
                    </div>
                  </div>
                  <p class="text-sm text-foreground/60 mb-6" data-translate="menu.toShareNote">
                    Pide tu piqueo con papas nativas o ensalada de la casa
                  </p>
                  <div class="grid grid-cols-1 gap-6">
                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.hamburguesa_res">HAMBURGUESA DE RES</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 40</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.hamburguesa_res_desc">
                        Fino lomo de res, lechuga, tocino, tomate, cebolla, queso edan, pickles.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.hamburguesa_alpaca">HAMBURGUESA DE ALPACA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 45</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.hamburguesa_alpaca_desc">
                        Fino lomo de alpaca, lechuga, tocino, tomate, cebolla, queso edan, pickles.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.hamburguesa_vegetariana">HAMBURGUESA VEGETARIANA</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 35</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.hamburguesa_vegetariana_desc">
                        Menestras, espinaca, tomate, palta.
                      </p>
                    </div>

                    <div class="menu-item-card">
                      <div class="flex justify-between items-start mb-2">
                        <h3 class="text-lg font-bold gradient-text" data-translate="menu.dishes.deditos_pollo">DEDITOS DE POLLO</h3>
                        <span class="text-lg font-bold text-amber-500">S/. 32</span>
                      </div>
                      <p class="text-sm text-foreground/70" data-translate="menu.dishes.deditos_pollo_desc">
                        Deditos de pollo empanizado en quinua remojado en salsa ponzu.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Cócteles -->
                <div id="cocteles" class="scroll-mt-24">
                  <div class="relative h-64 rounded-2xl overflow-hidden mb-8">
                    <img 
                      src="/images/bebida1.jpg" 
                      alt="Cócteles Amanto"
                      class="w-full h-full object-cover"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent flex items-end">
                      <h2 class="text-3xl md:text-4xl font-bold text-white p-8" data-translate="menu.cocktails">
                        Cócteles
                      </h2>
                    </div>
                  </div>
                  
                  <div class="mb-12">
                    <h3 class="text-xl font-bold text-foreground/80 mb-6" data-translate="menu.authorCocktails">
