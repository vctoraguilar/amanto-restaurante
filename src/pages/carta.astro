<script>
  // Smooth scroll and active category highlighting
  document.addEventListener('DOMContentLoaded', () => {
    const categories = document.querySelectorAll('.menu-category-link');
    const sections = document.querySelectorAll('[id]');
    
    const observerOptions = {
      threshold: 0.3,
      rootMargin: '-120px 0px -60%'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.getAttribute('id');
          
          // Remove active class from all categories
          categories.forEach(cat => {
            cat.classList.remove('active');
          });
          
          // Add active class to current category
          categories.forEach(cat => {
            const categoryId = cat.getAttribute('data-category');
            if (categoryId === id) {
              cat.classList.add('active');
            }
          });
        }
      });
    }, observerOptions);

    sections.forEach(section => {
      if (section.id && section.id !== 'main-nav') {
        observer.observe(section);
      }
    });

    // Handle click events for smooth scroll
    categories.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId: string | null = link.getAttribute('data-category');
        
        if (targetId) {
          const targetSection = document.getElementById(targetId);
          
          if (targetSection) {
            const yOffset = -100; // Offset for fixed header
            const y = targetSection.getBoundingClientRect().top + window.pageYOffset + yOffset;
            
            window.scrollTo({ top: y, behavior: 'smooth' });
            
            // Update active state immediately
            categories.forEach(cat => cat.classList.remove('active'));
            link.classList.add('active');
          }
        }
      });
    });
  });
</script>
